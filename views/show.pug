extends ./base.pug

include ./mixins/accountAttr.pug

block content
  each account in accounts
    div.tile.is-ancestor.mt-4
      div.tile.is-vertical.is-3
      div.tile.is-vertical.is-6
        div.tile.is-parent.is-vertical.notification.is-info
          +accountAttr('ID', account.id)
          +accountAttr('Account', account.name)
          +accountAttr('Username', account.username || 'N/A')
          
          div.mb-4
            div.title Password
            div.subtitle
              strong
                if account.password
                  div= account.password
                else
                  a(href="?password=true")= account.password || '(click to show)'

          +accountAttr('Extra Information', account.extra || 'N/A')
          
          div.mb-4
            div.title Jupiter Txn
            div.subtitle
              strong
                a(
                  href=`https://explorer.gojupiter.tech/api/tx/${account.meta}`
                  target="_blank"
                  rel="noopener noreferrer")= account.meta